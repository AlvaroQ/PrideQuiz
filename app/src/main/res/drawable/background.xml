<?xml version="1.0" encoding="utf-8"?>
<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:endColor="#9300FF"
                android:startColor="#35005A" />
        </shape>
    </item>

    <item
        android:type="linear"
        android:bottom="650dp"
        android:left="-100dp"
        android:right="-100dp"
        android:top="-150dp">
        <shape android:shape="oval">
            <solid android:color="#E500FF" />
        </shape>
    </item>


    <item
        android:type="linear"
        android:bottom="655dp"
        android:left="-100dp"
        android:right="-100dp"
        android:top="-280dp">
        <shape android:shape="oval">
            <gradient
                android:angle="-90"
                android:endColor="#FF3030"
                android:startColor="#000000" />
        </shape>
    </item>
</layer-list>
